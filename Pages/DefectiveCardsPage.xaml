<Page x:Class="Defective_Cards.Pages.DefectiveCardsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Defective_Cards.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DefectiveCardsPage">

    <Page.Resources>
        <Style TargetType="TextBlock" x:Key="TextBlockStyle">
            <Setter Property="FontSize" Value="25"/>
            <Setter Property="Margin" Value="0, 0, 20, 0"/>

        </Style>

    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="4.5*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock x:Name="TotalСards" Text="Всего Карт" Style="{StaticResource TextBlockStyle}"/>
            <TextBlock x:Name="NumberOfStacks" Text="Количество Стопок" Style="{StaticResource TextBlockStyle}"/>
        </StackPanel>
        <DataGrid Grid.Row="1" Name="CardsDataGrid" AutoGenerateColumns="False" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Номер Карты" Binding="{Binding Number}" Width="*"/>
                <DataGridTextColumn Header="Код Брака" Binding="{Binding RejectCode}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>

</Page>
