<Page x:Class="Defective_Cards.Pages.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Defective_Cards.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title=""
      Height="450" Width="800"
    
      Background="#f5f5f5">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Text="Введите стопку:"
           VerticalAlignment="Top" HorizontalAlignment="Right" Height="Auto" Width="Auto" Margin="0,198,400,0"
           FontSize="20"/>

        <TextBox Grid.Row="0" 
         x:Name="StartFromNum"
         VerticalAlignment="Top" HorizontalAlignment="Right" MaxLength="20" Height="Auto" Width="100" Margin="0,196,285,0"
         FontSize="20"
         Background="#F8F8FF" KeyDown="StartFromNum_KeyDown"/>

        <Button x:Name="ButtonStart" Grid.Row="1"
            Content="Начать" FontSize="20"
            Margin="0,0,0,70" MaxHeight="40" Width="90" Click="ButtonStart_Click"
            />
    </Grid>
</Page>

